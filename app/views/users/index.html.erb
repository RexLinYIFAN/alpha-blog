<h1 aligh='center'>All alpha bloggers</h1>
<div align='center'>
  <% @user.each do |u| %>
    <ul class='listing'>
      <div class='row'>
        <div class='well col-md-4 col-md-offset-4'>
         <li><%= link_to gravatar_for(u), user_path(u)%></li> 
         <li class="article-path"><%= link_to u.username,user_path(u) %></li>
         <li><%= pluralize(u.articles.count,"articles") if u.articles %></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>